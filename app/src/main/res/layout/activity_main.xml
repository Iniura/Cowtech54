<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



<include layout="@layout/main_toolbar" />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world"
        android:visibility="visible"
        android:id="@+id/textWelcome" />

    <TextView
        android:id="@+id/btText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:text="Device..."
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="36dp">


            <android.support.v7.widget.AppCompatButton
                android:id="@+id/dynamo_mainButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="0.9"
                android:padding="12dp"
                android:text="DynamoDB  Dev"
                android:visibility="gone"
                tools:text="DynamoDB  Dev" />
            <Button
                android:id="@+id/dynamoCreateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                android:text="Dynamo CREATE" />

            <Button
                android:id="@+id/dynamoDeleteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Dynamo DELETE"
                android:visibility="gone" />

            <Button
                android:id="@+id/dynamoSendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"
                android:text="Dynamo SEND" />

            <Button
                android:id="@+id/dynamoUpdateBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1"

                android:text="Dynamo UPDATE" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="36dp">

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/bt_mainButton"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="0.9"
                android:padding="12dp"
                android:text="CONNECT TO DEV"
                tools:text="Connect to Dev" />


            <Button
                android:id="@+id/connectedBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1.2"

                android:text="CONNECTED ACT"
                android:visibility="gone" />

            <Button
                android:id="@+id/gyroBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1.2"

                android:text="GYRO SENSOR" />

            <Button
                android:id="@+id/simplePlotBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1.2"

                android:text="Simple PLOT"
                android:visibility="gone" />

            <Button
                android:id="@+id/dynamicPlotBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1.2"

                android:text="Dynamic PLOT" />

            <Button
                android:id="@+id/serviceBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:layout_weight="1.2"

                android:text="Service ACT"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>




</LinearLayout>
